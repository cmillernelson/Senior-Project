        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OutdoorCenterRentals"
        mc:Ignorable="d"
        Title="QuickStats" Height="177.729" Width="300">
    <Grid>
        <Label x:Name="rentalsLabel" Content="Total # of rentals: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="itemsLabel" Content="Total # of items rented: " HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="customersLabel" Content="Unique customers: " HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="okayButton" Content="Okay" HorizontalAlignment="Left" Margin="111,112,0,0" VerticalAlignment="Top" Width="75" FontSize="18" Click="okayButton_Click"/>

    </Grid>
